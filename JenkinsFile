pipeline {
    agent any

    stages {


        stage('Clean Projects') {
            steps {
                bat 'mvn clean'
            }
        }

        stage('Compile') {
            steps {
                bat 'mvn clean compile'
            }
        }



        stage('Home Page Comp Test') {
            steps {
                script {
                    try {
                        bat """
                            mvn package -PHomePage
                        """
                    } catch (Exception e) {
                        echo "Test failed: ${e.message}"
                    }
                }
            }
        }

        stage('Clean Allure Results') {
            steps {
                deleteDir('allure-results') // Ensure previous results are cleared
            }
        }
    }

    post {
        always {
            // Archive the JAR file generated
                       archiveArtifacts artifacts: 'target/*.jar', allowEmptyArchive: true

                       // Publish JUnit test results
                       junit 'target/surefire-reports/junitreports/TEST-*.xml'

                       // Archive screenshots
                       archiveArtifacts artifacts: 'ScreenShots/*.png', allowEmptyArchive: true

                       // Generate Allure report
                       allure([
                           results: [[path: 'target/allure-results']]
                       ])

        }
    }
}
