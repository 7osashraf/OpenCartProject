pipeline {
    agent any


 stage('Clean Project') {
            steps {
                bat 'mvn clean'
            }
        }
        stage('Compile') {
            steps {
                bat 'mvn clean compile'
            }
        }

         stage('Package') {
                    steps {
                        bat 'mvn clean package' // Ensure this is run to create .jar files
                    }
                }



        stage('Home Page Comp Test') {
            steps {
                script {
                    try {
                        bat """

                            mvn test -PHomePage
                        """
                    } catch (Exception e) {
                        echo "Home Page Comp Test failed: ${e.getMessage()}"





                    }
                }
            }
        }
    }

    post {
        always {

             archiveArtifacts artifacts: 'target/*.jar', allowEmptyArchive: true
             junit '/target/surefire-reports/junitreports/TEST-*.xml'
             archiveArtifacts artifacts: 'ScreenShot/*.png', allowEmptyArchive: true

        }
    }
}
